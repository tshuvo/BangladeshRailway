<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    android:background="@drawable/border_corners_square_gray_light2"
    android:padding="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ac_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    tools:text="ট্রেন" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_one_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="৩৫৪ টি" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_two_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="আন্তঃনগর: ১০৪টি" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_three_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="মালবাহী:৪৫টি" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_four_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="মালবাহী:৪৫টি" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_five_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="মালবাহী:৪৫টি" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="৩৫৪ টি" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="মালবাহী:৪৫টি" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text="মালবাহী:৪৫টি" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ac_tv_body_five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pest_bright"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        tools:text=":" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>